// For format details, see https://aka.ms/vscode-remote/devcontainer.json or this file's README at:
// https://github.com/microsoft/vscode-dev-containers/tree/v0.134.0/containers/cpp
{
  "name": "C++",
  "build": {
    "dockerfile": "Dockerfile",
    // Update 'VARIANT' to pick an Debian OS version: buster, stretch
    "args": {
      "VARIANT": "bullseye"
    }
  },
  "runArgs": [
    "--cap-add=SYS_PTRACE",
    "--security-opt",
    "seccomp=unconfined",
    "--net",
    "host",
    "-e",
    "DISPLAY=${env:DISPLAY}",
    "-v",
    "/tmp/.X11-unix:/tmp/.X11-unix"
  ],
  // Set *default* container specific settings.json values on container create.
  // "settings": { 
  // 	"terminal.integrated.shell.linux": "/bin/bash"
  // },
  // Add the IDs of extensions you want installed when the container is created.
  "extensions": [
    "galexite.bazel-cpp-tools",
    "llvm-vs-code-extensions.vscode-clangd",
    "ms-vscode.cpptools",
    "ms-azuretools.vscode-docker",
    "matepek.vscode-catch2-test-adapter",
    "jeff-hykin.better-cpp-syntax",
    "xaver.clang-format",
    "redhat.vscode-yaml",
    "stackbuild.bazel-stack-vscode",
    "ambooth.git-rename",
    "sumneko.lua",
    "cweijan.vscode-database-client2"
  ],
  "mounts": [
    "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind",
    "source=${localEnv:HOME}/.ssh,target=/home/vscode/.ssh,type=bind,consistency=delegated",
    "source=${localEnv:HOME}/.config/gcloud,target=/home/vscode/.config/gcloud,type=bind"
  ],
  // Use 'forwardPorts' to make a list of ports inside the container available locally.
  // "forwardPorts": [],
  // Use 'postCreateCommand' to run commands after the container is created.
  // "postCreateCommand": "gcc -v",
  // Comment out this line to run as root instead.
  "remoteUser": "vscode",
  "postStartCommand": "git config --global user.email \"${localEnv:VSCODE_CONTAINER_GIT_EMAIL}\" && git config --global user.name \"${localEnv:VSCODE_CONTAINER_GIT_USER}\" && rm /home/vscode/.bashrc && ln -nsf /workspaces/data-structures/.devcontainer/.bashrc /home/vscode/.bashrc && ln -nsf /workspaces/data-structures/.devcontainer/.localrc /home/vscode/.localrc && ln -nsf /workspaces/data-structures/.devcontainer/.vimrc /home/vscode/.vimrc"
}